    <% include ../partial/script %>
  </body>
  <script src="/javascripts/jquery-3.4.1.min.js" charset="utf-8"></script>
  <script src="/javascripts/jquery.validate.min.js" charset="utf-8"></script>
<script type="text/javascript">
  $("#myForm").validate({
rules: {
  username: {
    required: true,
    minlength:5,
  },
  useremail: {
      required: true,
      emailExt:true,
    },
  pwd: {
        required: true,
        minlength:8,
        pwcheck:true,
      }
},

messages: {
username: {
  required: "User name is need to insert",
},
useremail: {
    required: "User email is need to insert",
  },
pwd: {
      required: "User password is need to insert",
      pwcheck: "Please enter oneupper case,one lowercase and one digit",

      }
    }
});
$.validator.addMethod("pwcheck", function(value) {
 return /^[A-Za-z0-9\d=!\-@._*]*$/.test(value) // consists of only these
     && /[a-z]/.test(value) // has a lowercase letter
     && /\d/.test(value) // has a digit
});

jQuery.validator.addMethod("emailExt", function(value, element, param) {
  return value.match(/^[a-zA-Z0-9_\.%\+\-]+@[a-zA-Z0-9\.\-]+\.[a-zA-Z]{2,}$/);
},'Your E-mail is wrong');

</script>
</html>





